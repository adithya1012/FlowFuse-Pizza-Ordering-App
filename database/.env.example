# ============================================================================
# MySQL Database Environment Variables
# ============================================================================
# This file contains environment variables for the MySQL database container
# 
# IMPORTANT: 
# - DO NOT commit this file to version control in production
# - Add .env to .gitignore
# - Use different credentials for production
# ============================================================================

# MySQL Root Password
# Used for administrative access to MySQL
MYSQL_ROOT_PASSWORD=rootpassword123

# Database Name
# The database that will be created automatically on container startup
MYSQL_DATABASE=pizza_app_db

# Application Database User
# A non-root user with access to the application database
MYSQL_USER=pizza_user

# Application Database User Password
# Password for the non-root database user
MYSQL_PASSWORD=pizza_password123

# ============================================================================
# Connection Information for Backend
# ============================================================================
# 
# When connecting from backend (outside Docker):
#   Host: localhost
#   Port: 3306
#   Database: pizza_app_db
#   User: pizza_user
#   Password: pizza_password123
# 
# When connecting from backend (inside Docker network):
#   Host: mysql (service name from docker-compose.yml)
#   Port: 3306
#   Database: pizza_app_db
#   User: pizza_user
#   Password: pizza_password123
# ============================================================================
